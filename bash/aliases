# alias grep='grep --color'                     # show differences in colour

alias ls='ls -hF --color=tty'                 # classify files in colour
alias h=history
alias vi=vim
alias rm='rm -i'
alias :w='echo "You'"'"'re not in vi, silly."'

function svndiff()
{
  svn diff "$@" | colordiff | less -R && svn diff "$@"
}

