[user]
  name = Michael Gundlach
  email = gundlach@gmail.com
[format]
  ; pretty = %h [%an] (%cr) %s
  ; see https://www.kernel.org/pub/software/scm/git/docs/git-log.html
  pretty = %C(yellow)%h %m %an %m %Creset %s %C(red)(%cr)%Creset
[alias]
[color]
  ui = true
[push]
  ; 'git push' pushes current branch to its upstream, even if names
  ; don't match.
  default = upstream
[merge]
	conflictstyle = diff3
[alias]
  s = status
  d = diff
  p = push
  b = branch
  c = commit
  cam = commit -am
  co = checkout
  a = add
  l = log
  ; Same as gl
  graphlog = log --graph --decorate --pretty='format:%C(yellow) %h%C(blue)%d%Creset %s%C(yellow) %m %an %m%C(red) (%cr)%Creset'
  ; Same as graphlog
  gl = log --graph --decorate --pretty='format:%C(yellow) %h%C(blue)%d%Creset %s%C(yellow) %m %an %m%C(red) (%cr)%Creset'
